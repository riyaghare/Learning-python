#Binary search 
list = [1, 6, 2, 4]
n = 4
print("List before sorting:", list)
list.sort()
print("List after sorting:", list)

pos = -1

def search(list, n):
    l = 0
    u = len(list) - 1
    m=0

    while l <= u:
        mid = (l+u) // 2
        m=m+1
        if list[mid] == n:
            globals()['pos'] = mid
            print("Number of Itrations:",m)
            return n
        else:
            if list[mid] < n:
                l = mid
            else: 
                u = mid

binary_sort = search(list,n)
print("Binary Search: ", binary_sort)